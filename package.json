{
  "name": "ecommerce-reviews-optimized",
  "version": "2.0.0",
  "description": "Performance-optimized e-commerce reviews system with lazy loading, virtual scrolling, and advanced caching",
  "main": "dist/ecommerce-reviews.min.js",
  "type": "module",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:analyze": "ANALYZE=true npm run build",
    "dev": "webpack-dev-server --mode=development",
    "start": "npm run dev",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "minify": "terser ecommerce-reviews-optimized.js -o ecommerce-reviews.min.js --compress --mangle",
    "gzip": "gzip -k dist/*.js",
    "size": "bundlesize",
    "perf:lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "perf:bundle": "npm run build:analyze && open bundle-analysis.html"
  },
  "bundlesize": [
    {
      "path": "./dist/ecommerce-reviews.*.min.js",
      "maxSize": "50 kB",
      "compression": "gzip"
    },
    {
      "path": "./dist/vendors.*.chunk.js",
      "maxSize": "30 kB",
      "compression": "gzip"
    }
  ],
  "keywords": [
    "ecommerce",
    "reviews",
    "performance",
    "optimization",
    "lazy-loading",
    "virtual-scrolling",
    "caching"
  ],
  "author": "Performance Optimization Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/plugin-transform-runtime": "^7.23.0",
    "babel-loader": "^9.1.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "bundlesize": "^0.18.1",
    "compression-webpack-plugin": "^10.0.0",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.7.0",
    "lighthouse": "^11.0.0",
    "terser": "^5.20.0",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.23.0",
    "core-js": "^3.32.0"
  },
  "peerDependencies": {
    "gsap": "^3.12.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": ["airbnb-base"],
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}